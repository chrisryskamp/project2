    ul
      li What is what is the square root of Pi? 
      li Hint:None
      li Answer: 3.14159265359
    .card.border-secondary.mb-4
    .card-body.text-secondary
    
    h5.card-title Your Question

block content
  include includes/js

  ul
    li= cardData.question
    li= cardData.hint

  button(id="revealAnswer") Click here for answer!
  
  form(action="/api/cards")

    button(id="nextQuestion") Click here for self-review!
    p.
    p(class="displayAnswer")= cardData.answer
    main.inner.cover(role='main')
    form.d-flex.justify-content-center.flex-column(action='/api/cards', method='POST')
    label(for='cardInput') 
    p
    .jumbotron-fluid.medium-warning.text-white.text-center(style='background: rgba(9, 172, 248, 0.788);')
